/* eslint max-lines: 'off' */

import { asset } from '../lib/data.js';
import { getCurrentUser } from '../lib/api.ts';

import ColorModeSwitcher from '../components/ColorModeSwitcher.astro';
import SearchInput from '../components/SearchInput.astro';

// Obtener el usuario actual y sus roles
let user = null;
let userRoles: string[] = [];
let userName = 'Usuario';
let userEmail = 'usuario@saborgourmet.com';
let userRoleName = 'Usuario';

try {
	user = await getCurrentUser();
	if (user) {
		userName = user.username || 'Usuario';
		userEmail = `${user.username}@saborgourmet.com`;
		if (user.roles && user.roles.length > 0) {
			userRoles = user.roles;
			const role = user.roles[0];
			userRoleName = role === 'ADMIN' ? 'Administrador' 
				: role === 'MOZO' ? 'Mozo'
				: role === 'COCINERO' ? 'Cocinero'
				: role === 'CAJERO' ? 'Cajero'
				: 'Usuario';
		}
	}
} catch (error) {
	console.error('Error obteniendo usuario:', error);
	// Si no se puede obtener el usuario, usar valores por defecto
}

const isAdmin = userRoles.includes('ADMIN');
const isCajero = userRoles.includes('CAJERO');
const hasUser = user !== null;
