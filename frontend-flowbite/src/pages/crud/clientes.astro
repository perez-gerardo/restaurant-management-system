---
import LayoutSidebar from '../../app/LayoutSidebar.astro';
import { fetchClientes, getCurrentUser } from '../../lib/api.ts';

// Verificar permisos
const user = await getCurrentUser();
const userRoles = user?.roles || [];

// Si hay usuario, verificar que sea admin
if (user) {
	const isAdmin = userRoles.includes('ADMIN');
	if (!isAdmin) {
		return Astro.redirect('/acceso-denegado');
	}
}

const clientes = await fetchClientes();
---

<LayoutSidebar>
	<div class="px-4 pt-6">
		<div class="mb-4 flex justify-between items-center">
			<div>
				<h1 class="text-2xl font-bold text-gray-900 dark:text-white">Gestión de Clientes</h1>
				<p class="text-gray-600 dark:text-gray-400">Administra los clientes del restaurante</p>
			</div>
			<a
				href="/crud/clientes/nuevo"
				class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700"
			>
				Nuevo Cliente
			</a>
		</div>

		<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
			<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
				<thead
					class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400"
				>
					<tr>
						<th scope="col" class="px-6 py-3">ID</th>
						<th scope="col" class="px-6 py-3">DNI</th>
						<th scope="col" class="px-6 py-3">Nombres</th>
						<th scope="col" class="px-6 py-3">Apellidos</th>
						<th scope="col" class="px-6 py-3">Teléfono</th>
						<th scope="col" class="px-6 py-3">Correo</th>
						<th scope="col" class="px-6 py-3">Estado</th>
						<th scope="col" class="px-6 py-3">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{clientes.map((cliente) => (
						<tr
							class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
						>
							<td class="px-6 py-4">{cliente.idCliente}</td>
							<td class="px-6 py-4">{cliente.dni}</td>
							<td class="px-6 py-4">{cliente.nombres}</td>
							<td class="px-6 py-4">{cliente.apellidos}</td>
							<td class="px-6 py-4">{cliente.telefono || '-'}</td>
							<td class="px-6 py-4">{cliente.correo || '-'}</td>
							<td class="px-6 py-4">
								{cliente.estado === 'activo' ? (
									<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
										{cliente.estado}
									</span>
								) : (
									<span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
										{cliente.estado}
									</span>
								)}
							</td>
							<td class="px-6 py-4">
								<a
									href={`/crud/clientes/editar/${cliente.idCliente}`}
									class="font-medium text-blue-600 dark:text-blue-500 hover:underline mr-3"
									>Editar</a
								>
								<a
									href={`/crud/clientes/eliminar/${cliente.idCliente}`}
									class="font-medium text-red-600 dark:text-red-500 hover:underline"
									>Eliminar</a
								>
							</td>
						</tr>
					))}
					{clientes.length === 0 && (
						<tr>
							<td colspan="8" class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">
								No hay clientes registrados
							</td>
						</tr>
					)}
				</tbody>
			</table>
		</div>
	</div>
</LayoutSidebar>



