---
import LayoutSidebar from '../../app/LayoutSidebar.astro';
import { fetchPlatos, getCurrentUser } from '../../lib/api.ts';

// Verificar permisos
const user = await getCurrentUser();
const userRoles = user?.roles || [];

// Si hay usuario, verificar que sea admin
if (user) {
	const isAdmin = userRoles.includes('ADMIN');
	if (!isAdmin) {
		return Astro.redirect('/acceso-denegado');
	}
}

const platos = await fetchPlatos();
---

<LayoutSidebar>
	<div class="px-4 pt-6">
		<div class="mb-4 flex justify-between items-center">
			<div>
				<h1 class="text-2xl font-bold text-gray-900 dark:text-white">Gestión de Platos</h1>
				<p class="text-gray-600 dark:text-gray-400">Catálogo del menú</p>
			</div>
			<a
				href="/crud/platos/nuevo"
				class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700"
			>
				Nuevo Plato
			</a>
		</div>

		<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
			{platos.map((plato) => (
				<div
					class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 hover:shadow-lg transition-shadow"
				>
					<div class="flex justify-between items-start mb-2">
						<h5 class="text-xl font-bold text-gray-900 dark:text-white">{plato.nombre}</h5>
						<span
							class="px-2 py-1 text-xs font-medium rounded bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300"
						>
							{plato.tipo}
						</span>
					</div>
					<p class="text-gray-600 dark:text-gray-400 text-sm mb-3">
						{plato.descripcion || 'Sin descripción'}
					</p>
					<div class="flex justify-between items-center">
						<span class="text-2xl font-bold text-gray-900 dark:text-white">
							S/ {plato.precio.toFixed(2)}
						</span>
						<div class="flex gap-2">
							<a
								href={`/crud/platos/editar/${plato.idPlato}`}
								class="text-blue-600 hover:text-blue-800 dark:text-blue-400"
								>Editar</a
							>
							<a
								href={`/crud/platos/eliminar/${plato.idPlato}`}
								class="text-red-600 hover:text-red-800 dark:text-red-400"
								>Eliminar</a
							>
						</div>
					</div>
				</div>
			))}
			{platos.length === 0 && (
				<div class="col-span-full text-center py-12 text-gray-500 dark:text-gray-400">
					No hay platos registrados
				</div>
			)}
		</div>
	</div>
</LayoutSidebar>



